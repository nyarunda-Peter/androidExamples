<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.honeywell.barcodeexample.MainActivityBarcodeScanner">


     <TextView
         android:id="@+id/btnBarcode"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:background="#5C8A8A"
         android:gravity="left"
         android:padding="6dp"
         android:text="@string/txtMainTitle"
         android:textColor="#FFFFFF"
         android:textSize="13sp" >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonClientBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/btnClientBarcode" />

        <Button
            android:id="@+id/buttonScannerSelectBarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/btnScannerSelectBarcode" />

        <Button
            android:id="@+id/btnSendPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="Send Scan Data" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_alignParentBottom="true"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text=" Powered by Future Kenya"
            android:textAppearance="" />

    </LinearLayout>

</RelativeLayout>